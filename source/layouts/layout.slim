doctype html
html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    meta name="viewport" content="width=device-width, initial-scale=1"
    meta charset="utf-8" /
    /! Always force latest IE rendering engine or request Chrome Frame
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" /
    /! Use title if it's in the page YAML frontmatter
    link rel="shortcut icon" href="#{image_path('favicon.ico')}"
    title= current_page.data.title || "The Middleman"
    = stylesheet_link_tag "normalize", "all", "font"
    = javascript_include_tag  "all"
  body class=page_classes





    header
      .logo
        =link_to 'index.html' do
          = image_tag '42-stacks-logo.png', :width => '160'
      .centered-navigation role="banner"
        .centered-navigation-wrapper
          <a href="javascript:void(0)" id="js-centered-navigation-mobile-menu" class="centered-navigation-mobile-menu">MENU</a>

          nav role="navigation"
            ul.nav-list.centered-navigation-menu.show id="js-centered-navigation-menu"
              li.nav-link.home= link_to "Home", "/"
              li.tour.nav-link= link_to "Tour", "tour.html"
              li.features.nav-link= link_to "Funktionen", "features.html"
              li.nav-link= link_to "Login", "https://cms.42stacks.com/login"
    section
      = yield

    footer
      section.wrapper
        .sitemap.grid4col
          ul
            li
              .cap 42STACKS
              ul
                li= link_to "Home", "/"
                li= link_to "Tour", "/tour.html"
                li= link_to "Funktionen", "/features.html"
                li.space.mbmd= link_to "Login", "https://cms.42stacks.com/login"
            li
              .cap ÜBER UNS
              ul
                li= link_to "Number 42", "http://number42.de/"
                //li= link_to "Blog", ""
                li.space.mbmd= link_to "Impressum", "/imprint.html"
            li
              .cap SUPPORT
              ul
                li= link_to "Angebot anfordern", "/contact.html"
                li= link_to "Hilfe und Feedback", "/feedback.html"
                li.space.mbmd= link_to "Datenschutzerklärung", "/privacy.html"

            li
              .cap KONTAKT
              ul
                li
                  a href="mailto:contact@42stacks.com" contact@42stacks.com
                li
                  a.icon-twitter href="https://twitter.com/42StacksDE" @42stacks
                li.space.mbmd
                  a.icon-facebook href="https://www.facebook.com/42Stacks/" 42stacks


